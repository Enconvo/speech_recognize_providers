{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "tts_providers",
  "version": "0.0.001",
  "description": "Text to Speech Providers",
  "title": "TTS Providers",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "categories": [
    "Text To Speech"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "edge_tts_provider",
      "title": "Edge TTS",
      "description": "Edge TTS Provider that allows you to use Microsoft Edge's online text-to-speech service",
      "icon": "edge_tts.jpg",
      "mode": "llm",
      "preferences": [
        {
          "name": "voice",
          "title": "Speech Voice",
          "description": "The voice to TTS.",
          "type": "dropdown",
          "required": false,
          "dataProxy": "tts_providers|edge_voices",
          "default": "en-US-AvaMultilingualNeural"
        }
      ]
    },
    {
      "name": "edge_voices",
      "title": "edge_voices",
      "description": "get edge_voices list",
      "icon": "icon.png",
      "showInCommandList": false,
      "mode": "no-view"
    },
    {
      "name": "mirosoft_tts_provider",
      "title": "Microsoft TTS",
      "description": "Microsoft TTS Provider that allows you to use Microsoft Azure's online text-to-speech service",
      "icon": "azure.png",
      "mode": "llm",
      "preferences": [
        {
          "name": "voice",
          "title": "Speech Voice",
          "description": "The voice to TTS.",
          "type": "dropdown",
          "required": false,
          "dataProxy": "tts_providers|azure_voices",
          "default": "en-US-AvaMultilingualNeural"
        },
        {
          "name": "region",
          "title": "Resource Region",
          "description": "The region of the resource.",
          "type": "textfield",
          "required": true,
          "default": ""
        },
        {
          "name": "resource_key",
          "title": "Resource Key",
          "description": "The resource key of the resource.",
          "type": "password",
          "required": true,
          "default": ""
        }
      ]
    },
    {
      "name": "azure_voices",
      "title": "azure_voices",
      "description": "get azure_voices list",
      "icon": "icon.png",
      "showInCommandList": false,
      "mode": "no-view"
    },
    {
      "name": "openai_tts_provider",
      "title": "OpenAI TTS",
      "description": "OpenAI TTS Provider that allows you to use OpenAI's online text-to-speech service",
      "icon": "openai.png",
      "mode": "llm",
      "preferences": [
        {
          "name": "openAIApiKey",
          "description": "OpenAI api key",
          "type": "password",
          "required": false,
          "title": "OpenAI Api Key",
          "default": "",
          "defaultProxy": "llm|chat_open_ai",
          "placeholder": "OpenAI Api Key"
        },
        {
          "name": "baseUrl",
          "description": "OpenAI api base url",
          "type": "textfield",
          "required": false,
          "title": "OpenAI Api Base Url",
          "default": "",
          "defaultProxy": "llm|chat_open_ai",
          "placeholder": "OpenAI Api Base Url"
        },
        {
          "name": "modelName",
          "description": "The model to TTS.",
          "type": "dropdown",
          "required": false,
          "title": "Model Name",
          "default": "tts-1",
          "data": [
            {
              "title": "tts-1",
              "value": "tts-1"
            },
            {
              "title": "tts-1-hd",
              "value": "tts-1-hd"
            }
          ]
        },
        {
          "name": "voice",
          "description": "The voice to TTS.",
          "type": "dropdown",
          "required": false,
          "title": "Voice",
          "default": "alloy",
          "data": [
            {
              "title": "alloy",
              "value": "alloy"
            },
            {
              "title": "echo",
              "value": "echo"
            },
            {
              "title": "fable",
              "value": "fable"
            },
            {
              "title": "onyx",
              "value": "onyx"
            },
            {
              "title": "nova",
              "value": "nova"
            },
            {
              "title": "shimmer",
              "value": "shimmer"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "/Users/ysnows/Documents/Project/enconvo.nodejs/enconvo_api",
    "axios": "^1.4.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.36.0",
    "node-edge-tts": "^1.2.2",
    "openai": "^4.33.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.14",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  }
}